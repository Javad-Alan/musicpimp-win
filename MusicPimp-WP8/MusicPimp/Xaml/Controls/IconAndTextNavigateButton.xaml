<HyperlinkButton x:Class="Mle.MusicPimp.Controls.IconAndTextNavigateButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pimp="clr-namespace:Mle.Xaml.Controls;assembly=Common-WP"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    <pimp:IconTwoRowsButton x:Name="btn" 
                            FirstRow="{Binding FirstRow}"
                            SecondRow="{Binding SecondRow}"
                            LeftImage="{Binding LeftImage}"/>
</HyperlinkButton>